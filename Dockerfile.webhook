FROM node:18-alpine

WORKDIR /app

# copy dependency manifest first (enables layer cache)
COPY alert-webhook/package.json ./
RUN npm install --omit=dev

# copy actual code
COPY alert-webhook/ .

EXPOSE 3001
HEALTHCHECK --interval=30s --timeout=5s --start-period=20s \
  CMD wget -qO- http://localhost:3001/health || exit 1

CMD ["npm", "start"]
